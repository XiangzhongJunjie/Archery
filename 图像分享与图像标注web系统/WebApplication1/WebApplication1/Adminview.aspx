    <asp:SqlDataSource ID="SqlDataSource1" runat="server" ConflictDetection="CompareAllValues" ConnectionString="<%$ ConnectionStrings:lizifanConnectionString %>" DeleteCommand="DELETE FROM [User] WHERE [Uid] = @original_Uid AND [Upwd] = @original_Upwd AND [Uname] = @original_Uname AND [Utype] = @original_Utype AND [Uqq] = @original_Uqq" InsertCommand="INSERT INTO [User] ([Uid], [Upwd], [Uname], [Utype], [Uqq]) VALUES (@Uid, @Upwd, @Uname, @Utype, @Uqq)" OldValuesParameterFormatString="original_{0}" SelectCommand="SELECT * FROM [User]" UpdateCommand="UPDATE [User] SET [Upwd] = @Upwd, [Uname] = @Uname, [Utype] = @Utype, [Uqq] = @Uqq WHERE [Uid] = @original_Uid AND [Upwd] = @original_Upwd AND [Uname] = @original_Uname AND [Utype] = @original_Utype AND [Uqq] = @original_Uqq">
        <DeleteParameters>
            <asp:Parameter Name="original_Uid" Type="String" />
            <asp:Parameter Name="original_Upwd" Type="String" />
            <asp:Parameter Name="original_Uname" Type="String" />
            <asp:Parameter Name="original_Utype" Type="String" />
            <asp:Parameter Name="original_Uqq" Type="String" />
        </DeleteParameters>
        <InsertParameters>
            <asp:Parameter Name="Uid" Type="String" />
            <asp:Parameter Name="Upwd" Type="String" />
            <asp:Parameter Name="Uname" Type="String" />
            <asp:Parameter Name="Utype" Type="String" />
            <asp:Parameter Name="Uqq" Type="String" />
        </InsertParameters>
        <UpdateParameters>
            <asp:Parameter Name="Upwd" Type="String" />
            <asp:Parameter Name="Uname" Type="String" />
            <asp:Parameter Name="Utype" Type="String" />
            <asp:Parameter Name="Uqq" Type="String" />
            <asp:Parameter Name="original_Uid" Type="String" />
            <asp:Parameter Name="original_Upwd" Type="String" />
            <asp:Parameter Name="original_Uname" Type="String" />
            <asp:Parameter Name="original_Utype" Type="String" />
            <asp:Parameter Name="original_Uqq" Type="String" />
        </UpdateParameters>
</asp:SqlDataSource>
</asp:Content>
